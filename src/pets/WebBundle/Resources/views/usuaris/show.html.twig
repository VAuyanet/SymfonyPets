{% extends 'base.html.twig' %}

{% block content %}
    <h1>Usuari</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Idusuari</th>
                <td>{{ usuari.idUsuari }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ usuari.nom }}</td>
            </tr>
            <tr>
                <th>Cognoms</th>
                <td>{{ usuari.cognoms }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ usuari.email }}</td>
            </tr>
            <tr>
                <th>Perfil</th>
                <td>{{ usuari.role }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ usuari.password }}</td>
            </tr>
            <tr>
                <th>Departament</th>
                <td>{{ usuari.departament }}</td>
            </tr>
        </tbody>
    </table>

    <div><a href="{{ path('usuaris_index') }}">Tornar a la llista</a></div>
    <div><a href="{{ path('usuaris_edit', { 'idUsuari': usuari.idUsuari }) }}">Editar</a></div>
    <div>
        {{ form_start(delete_form) }}
            <input type="submit" value="Eliminar">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
