{% extends "base.html.twig" %}
{% block body %}
    <div class="">
        <div class="">
            <div class="nav-background">
                {% block nav %}
                        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                            <span class="navbar-brand">SymfonyPets</span>
                        </nav>
                {% endblock %}
            </div>
            <div class="offset-sm-2 col-sm-8">
                {% block content %}
                    {#{ form_start(form, {'action':'', 'method':'POST'}) }}
                        {{ form_end(form) }#}


                    {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}

                        {{app.user.name}} {{app.user.surname}} {{app.user.email}}  {{ app.user.role }}     

                    {% endif %}
                    <div class="login">
                        <form action="{{ path('pets_web_login') }}" method="post">
                            <label for="username">Username:</label>
                            <input type="text" id="username" name="_username" value="{#{ last_username }#}" />

                            <label for="password">Password:</label>
                            <input type="password" id="password" name="_password" />

                            {#
                                Si quieres controlar la url a la que el usuario 
                                es redirigido al enviar correctamente el formulario
                                <input type="hidden" name="_target_path" value="/account" />
                            #}

                            <button type="submit">Login</button>
                        </form>
                    </div>
                {% endblock %}
            </div>
        </div>
</div>

{% endblock %}